source 'https://github.com/CocoaPods/Specs.git'

target 'core-x' do  
  platform :ios, '10.0'

  use_frameworks!

  # Pods for core-x
  pod 'Appodeal'
  pod 'Eureka'
  pod 'SimulatorStatusMagic', :configurations => ['Debug']
  pod 'SwiftyStoreKit'

end

